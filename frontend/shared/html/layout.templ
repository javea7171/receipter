package html

templ Layout(title string) {
    <html data-theme="light">
        <head>
            <meta charset="utf-8"/>
            <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover"/>
            <title>{ title }</title>
            <link rel="stylesheet" href="/assets/app.css"/>
        </head>
        <body>
            { children... }
        </body>
    </html>
}
